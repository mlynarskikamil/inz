@model inz.Models.Song

@{
    ViewData["Title"] = "Edit";
}

<div class="panelDiv textColor">
    <h4>Edytuj utwór</h4>
    <hr />
    <div class="w-25 mx-auto">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Artist.Name_Artist" class="control-label"></label>
                <input asp-for="Artist.Name_Artist" class="form-control" asp-items="@Html.DisplayFor(model => model.Artist.Name_Artist)" />
            </div>
            <div class="form-group">
                <label asp-for="Album.Name_Album" class="control-label"></label>
                <input asp-for="Album.Name_Album" class="form-control" asp-items="@Html.DisplayFor(model => model.Album.Name_Album)" />
                @*@Html.EditorFor(model => model.Album.Name_Album)*@
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-danger" />
            </div>
        </form>
    </div>

    <div class="">
        <form asp-controller="Songs" asp-action="Index" name="all" class="w-25 mx-auto" method="get">
            <input type="submit" name="all" value="Wróć do listy" class="btn btnDiv textColor" style="margin:0px;" />
        </form>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
