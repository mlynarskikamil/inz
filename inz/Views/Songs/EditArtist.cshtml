@model inz.Models.ArtistViewModel

@{
    ViewData["Title"] = "EditArtist";
}

<div class="panelDiv textColor">
    <h4>Edytuj informacje o artyście</h4>
    <hr />
    <div class="w-25 mx-auto">
        <form asp-action="EditArtist" method="post" enctype="multipart/form-data" class="ajaxCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Imię</label>
                <input asp-for="Name" class="form-control" asp-items="@Html.DisplayFor(model => model.Name)"/>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label">Nazwisko</label>
                <input asp-for="Surname" class="form-control" asp-items="@Html.DisplayFor(model => model.Surname)" />
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label">Data urodzenia</label>
                <input type="date" asp-for="Birthday" class="form-control" asp-items="@Html.DisplayFor(model => model.Birthday)" />
            </div>

            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-danger" />
            </div>
        </form>
    </div>

    @await Html.PartialAsync("_ReturnToList")

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
