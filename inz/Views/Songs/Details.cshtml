@model inz.Models.Songs

@{
    ViewData["Title"] = "Details";
}


<div class="panelDiv textColor">
    <div>
        <h4>Utwór</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Artysta
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Artist)
            </dd>
            <dt>
                Tytuł
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt>
                Album
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Album)
            </dd>
        </dl>
    </div>
    <div class="m-5">
        <a asp-action="Edit" asp-route-id="@Model.ID" class="textColor btnDiv">Edytuj</a>
        <a asp-action="Index" class="textColor btnDiv">Wróć do listy</a>
    </div>
</div>
