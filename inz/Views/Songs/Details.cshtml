@model inz.Models.Songs

@{
    ViewData["Title"] = "Details";
}


<div class="panelDiv textColor">
    <div>
        <h4>Utwór</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Artysta
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Artist)
            </dd>
            <dt>
                Tytuł
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt>
                Album
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Album)
            </dd>
        </dl>
    </div>
    <div class="row justify-content-center">
        <form asp-controller="Songs" asp-action="Index" name="all" class="w-25 ml-2" method="get">
            <input type="submit" name="all" value="Wróć do listy" class="btn btnDiv textColor mx-auto col-8" style="height:65%;" />
        </form>
        <a asp-action="Edit" asp-route-id="@Model.ID" class="textColor btnDiv mr-5 col-2">Edytuj</a>
    </div>
</div>
