@model IEnumerable<inz.Models.Songs>

@{
    ViewData["Title"] = "Szukaj";
}

<div class="panelDiv textColor">

    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <form asp-controller="Songs" asp-action="Index" method="get">
        <div class="input-group w-50 m-3 mx-auto">
            <input type="text" class="form-control input-lg border-danger searchBorder" placeholder="Wyszukaj utwór lub artyste" name="search" />
            <span class="input-group-btn">
                <button class="btn btn-danger" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </span>
        </div>
    </form>

    @if (ViewBag.ShowList)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Artysta
                    </th>
                    <th>
                        Tytuł
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Artist)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID">Edytuj</a> |
                            <a asp-action="Details" asp-route-id="@item.ID">Detale</a> |
                            <a asp-action="Delete" asp-route-id="@item.ID">Usuń</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    </div>
