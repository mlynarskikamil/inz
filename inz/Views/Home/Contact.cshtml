@{
    ViewData["Title"] = "Kontakt";
}

<div class="panelDiv textColor">
    <h2>Kontakt z administracją</h2>

    <h4 class="textColor">Masz pytanie lub problem? <br /> Napisz do nas!</h4>

    <div class="mx-auto w-50 mt-4">
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-user icon"></i></div>
                </div>
                <input type="text" class="form-control" placeholder="Proszę wpisać imię" required>
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-at icon"></i></div>
                </div>
                <input type="email" class="form-control" placeholder="Proszę wpisać mail" required>
            </div>
        </div>
        <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-comment icon"></i></div>
                </div>
                <textarea class="form-control" style="height:150px;" placeholder="Proszę wpisać treść wiadomości" required></textarea>
            </div>
        </div>
        <div class="text-center">
            <input type="submit" value="Wyślij wiadomość" class="btn btn-info btn-block btn-danger py-2">
        </div>
    </div>
</div>
